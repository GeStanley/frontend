extends demolayout

block content

  style.
    .demo-card-square > .mdl-card__title {
      color: #fff;
      background: #46B6AC;
    }
    .demo-card-square.mdl-card {
      width: 256px;
      height: 256px;

    }
    .demo-card-square > .mdl-card__actions {
      border-color: rgba(255, 255, 255, 0.2);
    }
    .demo-card-square > .mdl-card__title {
      align-items: flex-start;
    }
    .demo-card-square > .mdl-card__title > h4 {
      margin-top: 0;
    }
    .demo-card-square > .mdl-card__actions {
      background: #3E4EB8;
      display: flex;
      box-sizing:border-box;
      align-items: center;
    }
    .demo-card-square > .mdl-card__title,
    .demo-card-square > .mdl-card__actions,
    .demo-card-square > .mdl-card__actions > .mdl-button {
      color: #fff;
    }

  div(class='md-layout__container')
    main(class='mdl-layout__content')
      div(class='page-content')
        div(class='mdl-grid')
          div(class='mdl-cell mdl-cell--1-col')
          div(class='mdl-cell mdl-cell--8-col')

            div(class='mdl-card mdl-shadow--6dp demo-card-square')

              div(class='mdl-card__title mdl-card--expand')
                h2(class='mdl-card__title-text') Login

              div(class='mdl-card__supporting-text')
                form
                  div(class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label')

                    input(class='mdl-textfield__input', type='text', id='email')
                    label(class='mdl-textfield__label', for='email') EMail...
                  div(class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label')
                    input(class='mdl-textfield__input', type='password', id='password')
                    label(class='mdl-textfield__label', for='password') Password...

              div(class='mdl-card__actions mdl-card--border')

                a(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect') Login
                div(class='mdl-layout-spacer')
                a(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect') Register


          div(class='mdl-cell mdl-cell--1-col')
