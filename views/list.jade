extends demolayout

block content
  div(class='md-layout__container')
    div(class='mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header')
      header(class='demo-header mdl-layout__header')
        div(class='mdl-layout__header-row')
          span(class='mdl-layout-title') Home

      div(class='mdl-layout__drawer')
        header(class='demo-drawer-header')
          div(class='demo-avatar-dropdown')
            span User Name
            div(class='mdl-layout-spacer')


        nav(class='mdl-navigation')
          a(class='mdl-navigation__link' href='') Profile
          a(class='mdl-navigation__link' href='') Calendar
          a(class='mdl-navigation__link' href='') Teams
          a(class='mdl-navigation__link' href='') News Feed
          div(class='mdl-layout-spacer')


      main(class='mdl-layout__content')
        div(class='page-content')
        div(class='mdl-grid demo-content')
          div(clas='demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid')
            div
              table(class='mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp')
                thead
                  tr
                    th name
                    th location
                tbody
                  tr
                    td Dragon Boat
                    td Montreal
                  tr
                    td Awesome Pawsomes
                    td Laval
