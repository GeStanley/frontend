extends demolayout

block content
  div(class='md-layout__container')
    div(class='demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header has-drawer is-upgraded', data-upgraded=',MaterialLayout')
      header(class='demo-header mdl-layout__header mdl-color--white mdl-color--grey-100 mdl-color-text--grey-600')
        div(class='mdl-layout__header-row')
          span(class='mdl-layout-title') Home
          div(class='mdl-layout-spacer')
          div(class='mdl-textfield mdl-js-textfield mdl-textfield--expandable')
            label(class='mdl-button mdl-js-button mdl-button--icon', for='search')
              i(class='material-icons') search

            div(class='mdl-textfield__expandable-holder')
              input(class='mdl-textfield__input', type='text', id='search')
              label(class='mdl-textfield__label', for='search') Enter your query...


          button(class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon', id='hdrbtn')
            i(class='material-icons') more_vert

          ul(class='mdl-menu mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-right', for='hdrbtn')
            li(class='mdl-menu__item') About
            li(class='mdl-menu__item') Contact
            li(class='mdl-menu__item') Legal information


      div(class='demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50')
        header(class='demo-drawer-header')
          div(class='demo-avatar-dropdown')
            span hello@example.com
            div(class='mdl-layout-spacer')


        nav(class='demo-navigation mdl-navigation mdl-color--blue-grey-800')
          a(class='mdl-navigation__link' href='') Profile
          a(class='mdl-navigation__link' href='') Calendar
          a(class='mdl-navigation__link' href='') Teams
          a(class='mdl-navigation__link' href='') News Feed
          div(class='mdl-layout-spacer')


      main(class='mdl-layout__content mdl-color--grey-100')
        div(class='mdl-grid demo-content')
          div(clas='demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid')
            div
              table
                thead
                  td name
                  td location
                tbody
                  tr
                    td Dragon Boat
                    td Montreal
                  tr
                    td Awesome Pawsomes
                    td Laval

      div(class='mdl-layout__obfuscator')
